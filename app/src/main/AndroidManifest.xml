<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.submission4">

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_movie_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_movie_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fragment.TVShowFragment" />
        <activity android:name=".fragment.MovieFragment" />
        <activity android:name=".activity.TVShowShowActivity" />
        <activity android:name=".activity.TVShowFavoriteActivity" />
        <activity android:name=".activity.MovieShowActivity" />
        <activity android:name=".activity.MovieFavoriteActivity" />
        <activity android:name=".activity.TVShowDetailActivity" />
        <activity android:name=".activity.MovieDetailActivity" />
        <activity android:name=".activity.MainActivity"></activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>